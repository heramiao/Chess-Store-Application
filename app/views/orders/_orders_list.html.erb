<% if @all_orders.empty? %>
    <h3>There are no available orders at this time</h3>
<% else %>
    <h4>All Orders</h4>
    <table class="table table-striped">
        <thead>
        <tr>
        <th>Date Placed</th>
        <th>School</th>
        <th></th>
        </tr>
        </thead>

        <tbody>
        <% @all_orders.each do |order| %>
            <tr>
            <td><%= order.date %></td>
            <td><%= link_to order.school.name, school_path(order.school) %></td>
            <td><%= link_to "Details", order_path(order) %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% end %>