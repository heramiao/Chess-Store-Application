<% if @active_schools.empty? && @inactive_schools.empty? %>
    <h3>There are no available schools at this time</h3>
<% else %>
    <% unless @active_schools.empty? %>
        <h4>Active Schools</h4>
        <table class="striped">
        <thead>
        <tr>
        <th>School</th>
        <th>Address</th>
        <th>Min Grade</th>
        <th>Max Grade </th>
        <% if logged_in? && current_user.role?(:admin) %>
                <th></th>
                <th></th>
        <% end %>
        </tr>
        </thead>
        <tbody>
        <% @active_schools.each do |active| %>
            <tr>
            <td><%= active.name %></td>
            <td><%= active.street_1 %><br />
                <% unless active.street_2.blank? %>
                    <%= active.street_2 %><br />
                <% end %>
                <%= active.city %>, <%= active.state %> <%= active.zip %></td>
            <td><%= active.min_grade %></td>
            <td><%= active.max_grade %></td>
            <% if logged_in? && current_user.role?(:admin) %>
                    <td><%= link_to(edit_school_path(active, active: false), class: 'button tiny radius secondary') do %>
                        &nbsp;Make Inactive
                        <% end %></td>
                    <td><%= link_to "Edit", edit_school_path(active), class: 'button tiny radius secondary'%></td>
            <% end %>
            </tr>
        <% end %>
        </tbody>
        </table>
    <% end %>

    <% unless @inactive_schools.empty? %>
        <h4>Inactive Schools</h4>
        <table class="striped">
        <thead>
        <tr>
        <th>School</th>
        <th>Address</th>
        <th>Min Grade</th>
        <th>Max Grade</th>
        <% if logged_in? && current_user.role?(:admin) %>
                <th></th>
                <th></th>
        <% end %>
        </tr>
        </thead>
        <tbody>
        <% @inactive_schools.each do |inactive| %>
            <tr>
            <td><%= inactive.name %></td>
            <td><%= inactive.street_1 %><br />
                <% unless inactive.street_2.blank? %>
                    <%= inactive.street_2 %><br />
                <% end %>
                <%= inactive.city %>, <%= inactive.state %> <%= inactive.zip %></td>
            <td><%= inactive.min_grade %></td>
            <td><%= inactive.max_grade %></td>
            <% if logged_in? && current_user.role?(:admin) %>
                    <td><%= link_to(edit_school_path(inactive, active: false), class: 'button tiny radius secondary') do %>
                        &nbsp;Make Inactive
                        <% end %></td>
                    <td><%= link_to "Edit", edit_school_path(inactive), class: 'button tiny radius secondary'%></td>
            <% end %>
            </tr>
        <% end %>
        </tbody>
        </table>
    <% end %>
<% end %>
