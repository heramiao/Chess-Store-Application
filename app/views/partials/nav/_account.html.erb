<ul id="account_dropdown" class="dropdown-content">
    <li><%= link_to "View Profile", user_path(current_user) %></li>
    <li><%= link_to "Edit Info", edit_current_user_path %></li>
    <% if logged_in? && current_user.role?(:customer) %>
        <li><%= link_to "Add School", new_school_path %><li>
    <% end %>
    <li><%= link_to "Logout", logout_path %></li>
</ul>

<li><a class="dropdown-button waves-effect waves-light btn green darken-2" data-activates="account_dropdown"><%= current_user.first_name %><i class="material-icons right">arrow_drop_down</i></a></li>
