<div class="row">
  <div class="col s8">
    <!-- primary partial gets displayed here in main div -->
    <%= render partial: "#{primary}" %>
    <!-- sometimes we want another partial below -->
    <% unless secondary.nil? %>
      <p>&nbsp;</p>
      <%= render partial: "#{secondary}" %>
    <% end %>
    
  </div>
  <div class="col s3 offset-s1">
    <!-- render the sidebar, if it exists -->
    <%= render partial: "#{sidebar}" unless sidebar.blank? %>
  </div>
</div>

<%# variable = model_name.capitalize.constantize %>
<% if (can? :create, model_name.capitalize.constantize.new) #&& !(model_name == :User && model_name.) %>
<%# if current_user.role?(:manager) %>
  <!-- Add a button for new instances of object -->
  <%= link_to(eval("new_#{model_name}_path"), class: "waves-effect waves-light btn green darken-1") do %>
    <!-- <i class="fa fa-plus"></i> -->
    &nbsp;Add a New <%= model_name.capitalize %>
  <% end %>
<% end %>

