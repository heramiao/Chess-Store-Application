 <div class="row">
    <div class="col s8">
        <% unless @past_orders.empty? %>       
        <div id="past_orders">   
            <ul class="collapsible" data-collapsible="accordion">
            <% @past_orders.each do |order| %>
                <li>
                <div class="collapsible-header">
                    <i class="material-icons green darken-1">view_list</i>
                    <h7><%= "Order Placed on #{order.date}" %></h7>
                </div>
                <div class="collapsible-body">
                    <span>
                    <table class="striped">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th>Status</th>
                        </tr>
                    <thead>
                    <tbody>
                        <% @past_order_items.each do |order_item| %>
                            <tr>
                            <td><%= link_to order_item.item.name, item_path(order_item.item) %></td>
                            <td><%= order_item.quantity %></td>
                            <td><%= order_item.subtotal %></td>
                            <% if order_item.shipped_on.nil? %>
                                <td>Unshipped</td>
                            <% else %>
                                <td>Shipped</td>
                            <% end %>
                            </tr>
                        <% end %>
                    </tbody>
                    </table>
                    </span>
                </div>
                </li>
            <% end %>
            </ul>
        </div>
        <% end %>
    </div>
</div>