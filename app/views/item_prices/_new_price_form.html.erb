<%= simple_form_for @item_price, html: { class: 'form-horizontal', multipart: true }, remote: true do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Price</legend>

    <%#= f.input :item_id, collection: Item.active.to_a, include_blank: true, input_html: {class: "avg"} %>
    <%= f.input :price, label: 'New Price', input_html: {class: "avg"} %>

    <%= f.input :item_id, as: :hidden, input_html: { value: params[:item_id] } %>
    <%= f.input :category, as: :hidden, input_html: { value: :wholesale} %>


    <div class="form-actions">
      <%= f.submit nil, class: "waves-effect waves-light btn green darken-1" %>
      <%= link_to 'Cancel', item_path(params[:item_id]), class: "waves-effect waves-light btn red" %>
    </div>
  </fieldset>
<% end %>