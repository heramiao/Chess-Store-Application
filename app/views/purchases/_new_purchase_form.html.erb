<%= simple_form_for @purchase, html: { class: 'form-horizontal', multipart: true }, remote: true do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Purchase</legend>

    <%= f.input :quantity, input_html: {class: "avg"} %>

    <%= f.input :item_id, as: :hidden, input_html: { value: params[:item_id] } %>


    <div class="form-actions">
      <%= f.submit nil, class: "waves-effect waves-light btn green darken-1" %>
      <%= link_to 'Cancel', home_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>