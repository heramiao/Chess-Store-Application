<div class="row">
    <div class="col s8">    
    <% if @cart_items.empty? %>
        <h5>Cart is empty right now</h5>
    <% else %>
        <table class="striped">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @cart_items.each do |order_item| %>
                    <tr>
                        <td><%= order_item.item.name %></td>
                        <td><%= order_item.quantity %></td>
                        <td><%= number_to_currency(order_item.item.current_price) %></td>
                        <td><%= link_to "Remove Item", remove_from_cart_path(order_item.item), class: "waves-effect waves-light btn red right" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="col s4">
        <h5>Subtotal: <%= number_to_currency(@subtotal) %></h5>
        <h5>Shipping Costs: <%= number_to_currency(@shipping_costs) %></h5>
        <h5>Total: <%= number_to_currency(@subtotal + @shipping_costs) %></h5><br>
        <h5><%= link_to "Checkout", new_order_path, class: "waves-effect waves-light btn green darken-1" %></h5>
    </div>

    <% end %>

</div>


