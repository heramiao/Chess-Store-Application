<% if @clocks.empty? %>
  <h5>There are no available clocks at this time</h5>
<% else %>
  <h4>Clocks</h4>
  <br>
  <ul class="shop_item">
    <% @clocks.each do |clock| %>
      <li><%= image_tag 'img_not_available.png' %></li>
      <li><%= link_to clock.name, item_path(clock) %></li>
      <li><%= number_to_currency clock.current_price %></li>
      <li>Quantity: <input type="integer">&nbsp&nbsp&nbsp<%#= link_to "Add to cart", cart_path %></li>
      <br>
      <br>
    <% end %>
  </ul>
<% end %>