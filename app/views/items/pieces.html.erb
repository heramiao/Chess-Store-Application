<% if @pieces.empty? %>
  <h5>There are no available pieces at this time</h5>
<% else %>
  <h4>Pieces</h4>
  <br>
  <div class="col s8">
  <% @pieces.each do |piece| %>
    <div class="col s2 m4">
      <div class="card">
        <div class="card-image">
          <%= image_tag 'img_not_available.png' %>
        </div>
        <div class="card-content">
          <ul>
            <li><%= link_to piece.name, item_path(piece) %></li>
            <li><%= number_to_currency piece.current_price %></li>
          </ul>
        </div>
        <div class="card-action">
          <% if logged_in? %>
            <%= link_to "Add to cart", add_to_cart_path(piece) %>
          <% else %>
            <%= link_to "Add to cart", new_user_path %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
<% end %>

<div id="side_nav_items">
  <h5>Other Items</h5>
  <ul>
    <li><%= link_to "Boards", boards_path %></li>
    <li><%= link_to "Clocks", clocks_path %></li>
    <li><%= link_to "Supplies", supplies_path %></li>
    <li><%= link_to "View All", items_path %></li>
  </ul>
</div> 